<% title "Contact Us - Real Good Dog Rescue" %>
<%= raw(@contactus) %>
<h1>RGDR Contact Form</h1>
<%= form_tag("/contact", { method: :post }) do %>
    <% if @errors %>
        <div id="error_explanation">
        <h2><%= @errors.count %> errors prohibited this form from being saved:</h2>

          <ul>
          <% @errors.each do |key, message| %>
            <li><b><%= key %>: </b><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    <div class="row">
        <div class="col-lg-7">
            <%= label_tag "First Name", nil, class: "required" %>
            <%= text_field_tag "first_name", params[:first_name], class: "form-control" %>

            <%= label_tag "Last Name", nil, class: "required" %>
            <%= text_field_tag "last_name", params[:last_name], class: "form-control" %>

            <%= label_tag "Email Address", nil, class: "required" %>
            <%= email_field_tag "email", params[:email], class: "form-control" %>
            
            <%= label_tag "Phone Number", nil, class: "required" %>
            <%= text_field_tag "phone_number", params[:phone_number], class: "form-control" %>
            
            <%= label_tag "Your Message", nil, class: "required" %>
            <%= text_area_tag "message", params[:message], class: "form-control" %>
        </div>
    </div>
    <div class="actions" style="margin-top: 5px;">
        <%= submit_tag "Submit" %>
    </div>
<% end %>

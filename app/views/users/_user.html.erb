<div class="card">
    <div class="card-header">
        <h3>Details<h3>
    </div>
    <div class="card-block">
        <h4 class="card-title"><%= @user.full_name %> -
        <% if (@user.hierarchy == 0) %>
            Admin</h4>
        <% elsif (@user.hierarchy == 1) %>
            Moderator</h4>
        <% else %>
            Member</h4>
        <% end %>

        <h5>Email: <%=@user.email%></h5>
        <h5>Age: <%=@user.age%></h5>
        <h5>Address Line 1: <%=@user.address_line_one%></h5>
        <% if !@user.address_line_two.blank? %>
            <h5>Address Line 2: <%=@user.address_line_two%></h5>
        <% end %>
        <h5>City: <%=@user.city%></h5>
        <h5>State: <%=@user.state%></h5>
        <h5>ZIP: <%=@user.zip%></h5>
        <h5>Phone: <%=@user.format_phone%></h5>
    </div>
</div>



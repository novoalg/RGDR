<% title "Profile - Real Good Dog Rescue" %>
<h1><%="#{@user.first_name} #{@user.last_name}"%></h1>
<h5>Email: <%=@user.email%></h5>
<h5>Age: <%=@user.age%></h5>
<h5>Address Line 1: <%=@user.address_line_one%></h5>
<% if !@user.address_line_two.blank? %>
    <h5>Address Line 2: <%=@user.address_line_two%></h5>
<% end %>
<h5>City: <%=@user.city%></h5>
<h5>State: <%=@user.state%></h5>
<h5>ZIP: <%=@user.zip%></h5>
<h5>Phone: <%=@user.format_phone%></h5>
<%= link_to 'Edit', edit_user_path(@user) %>
